@model PostalManagementMVC.Entities.Location

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@* forma ne razor view per te krijuar nje vendodhje te re *@
<h1>Create</h1>

<h4>Location</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            @if (Model == null || Model.PostOfficeInChargeId == 0)
            {
                <div class="form-group">
                    <label asp-for="PostOfficeInChargeId" class="control-label"></label>
                    <select asp-for="PostOfficeInChargeId" class="form-control" asp-items="ViewBag.PostOfficeInChargeList"></select>
                </div>
            }
            else
            {
                <input asp-for="PostOfficeInChargeId" type="hidden" />
            }

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="InitialPostalCodeId" class="control-label"></label>
                <input asp-for="InitialPostalCodeId" class="form-control" />
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsPostOffice" /> @Html.DisplayNameFor(model => model.IsPostOffice)
                </label>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" /> |
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
